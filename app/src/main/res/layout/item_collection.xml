<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="hanlderClick"
            type="com.framgia.music_51.screen.detail_genre.HanlderClickItem" />

        <variable
            name="track"
            type="com.framgia.music_51.data.model.Track" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/constraint_item_playlist"
        android:onClick="@{() -> hanlderClick.onClickNavigatorPlayScreen(track)}"
        style="@style/background_click"
        android:layout_height="@dimen/dp_53"
        android:layout_margin="@dimen/dp_8"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_song"
            android:layout_width="@dimen/dp_60"
            imageView="@{track.artworkUrl}"
            android:layout_height="@dimen/dp_45"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:placeholderImage="@drawable/image_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_title_song"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:ellipsize="end"
            android:text="@{track.title}"
            android:maxLines="1"
            android:textColor="@color/color_blue_gray_900"
            android:textSize="@dimen/sp_16"
            app:layout_constraintEnd_toStartOf="@+id/icon_more_song"
            app:layout_constraintStart_toEndOf="@id/image_song"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_auth_song"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:ellipsize="end"
            android:textSize="@dimen/sp_14"
            android:maxLines="1"
            android:text="@{track.publisherMetadata.artist}"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_more_song"
            app:layout_constraintStart_toEndOf="@id/image_song" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="@{String.valueOf(track.likeCount)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>


</layout>
